<% provide(:title, 'Profile') %>

<div class = "row mrg-top">
  <div class="profile-nav col-md-offset-4 col-lg-5 col-lg-3">
    <section class="panel">
      <div class="user-heading round">
        <a href="#">
          <img alt="" src="/images/profile_icon.png">
          
        </a>
        <h1><%= @user.name %></h1>
        <p><%= @user.email %></p>
      </div>

      <ul class="nav nav-pills nav-stacked">
        <li>
          <a href="<%=edit_user_path(current_user)%>">
          <i class="glyphicon glyphicon-pencil"></i>
          Edit profile
          </a>
        </li>
      </ul>

    </section>
  </div>
</div>

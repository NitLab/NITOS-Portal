<% provide(:title, "Edit user") %>

<div class="row">
  <div class = "col-xm-3 col-sm-5 col-sm-offset-4 col-md-4 col-md-offset-4 form-signin">
    <%= form_for @user, :html =>{:class => "form-signin" } do |f| %>
      <h2 class = "form-signin-heading" >update your profile</h2>

      <div class = "login-wrap">

        <%= render 'shared/error_messages' %>

        <p> Enter your updated account details below</p>
       
        <%= f.text_field :name, class: "form-control", autofocus: "", placeholder: "User Name" %>
        
        <%= f.text_field :email, class: "form-control", autofocus: "", placeholder: "Email" %>
        
        <%= f.password_field :password, class: "form-control", autofocus: "", placeholder: "Password" %>
        
        <%= f.password_field :password_confirmation, class: "form-control", autofocus: "", placeholder: "Re-type Password" %>

        <%= f.submit "Save changes", class: "btn btn-lg btn-login btn-block" %>
      </div> 
    <% end %>
  </div>
</div>
